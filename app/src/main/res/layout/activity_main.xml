<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/label"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="7mm"
        android:maxHeight="7.5mm"
        />
    <Button
        android:id="@+id/btnC"
        android:layout_marginTop="@dimen/espaciadoDivs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="C"
        android:textSize="4mm"
        android:textColor="@color/accent_material_light"
        android:onClick="calculadora"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        >
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="4mm"

            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btnDiv"
            android:text="/"
            android:textSize="4mm"
            android:textColor="@color/accent_material_light"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btnMulti"
            android:text="*"
            android:textSize="4mm"
            android:textColor="@color/accent_material_light"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btnRes"
            android:text="-"
            android:textSize="4mm"
            android:textColor="@color/accent_material_light"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btnpunt"
            android:text="."
            android:textSize="4mm"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btnigual"
            android:text="="
            android:textSize="4mm"
            android:textColor="@color/accent_material_light"
            android:onClick="calculadora"/>
        <Button
            android:id="@+id/btnSum"
            android:text="+"
            android:textSize="4mm"
            android:textColor="@color/accent_material_light"
            android:onClick="calculadora"/>

    </GridLayout>


</LinearLayout>
